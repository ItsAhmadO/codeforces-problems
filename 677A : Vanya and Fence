#include <bits/stdc++.h>
using namespace std;
#define ll long long

int main() {
    int n,h,a;
    int width = 0;
    cin >> n >> h;
    while(n--){
        cin >> a;
        if(a > h){
            width += 2;
        }
        else{
            width++;
        }
    }
    cout << width;
    return 0;
}
